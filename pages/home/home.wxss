page {
  background-color: #f6f6f6;
}
page .main {
  width: 100%;
  box-sizing: border-box;
  padding-left: 32rpx;
  padding-right: 32rpx;
  padding-top: 48rpx;
  padding-bottom: 240rpx;
}
page .main .title-wrap {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding-left: 16rpx;
  padding-right: 16rpx;
}
page .main .view-wrap {
  display: flex;
  justify-content: start;
  align-items: center;
}
page .main .view-wrap .request-method {
  width: 30%;
}
page .main .view-wrap .input-url {
  width: 70%;
}
page .main .title-icon {
  width: 296rpx;
  height: 80rpx;
}
page .main .view-taber .textarea {
  width: 100%;
  overflow: scroll;
}
page .main .view-response .textarea {
  width: 100%;
  overflow: scroll;
}
page .main .view-response .textarea-input {
  height: 200rpx;
  width: 100%;
}
page .main .desc {
  color: rgba(0, 0, 0, 0.4);
  margin-top: 32rpx;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 44rpx;
  margin-bottom: 48rpx;
  padding-left: 16rpx;
  padding-right: 16rpx;
}
page .main .textarea-example {
  padding: 32rpx 32rpx 48rpx;
  background-color: #fff;
}
page .main .external-class {
  padding-top: 24rpx !important;
  padding-bottom: 24rpx !important;
}
page .main .textarea-example__label {
  display: block;
  color: rgba(0, 0, 0, 0.9);
  font-size: 24rpx;
  line-height: 40rpx;
  padding-bottom: 16rpx;
}
page .main .input-example {
  --td-input-vertical-padding: 24rpx;
  background-color: #fff;
  padding: 32rpx 32rpx 16rpx;
}
page .main .input-example .textarea {
  display: flex;
  justify-content: center;
  align-items: center;
}
page .main .input-example .textarea .t-textarea--border {
  width: 100%;
  margin-right: 10rpx;
}
page .main .input-example__label {
  color: rgba(0, 0, 0, 0.9);
  font-size: 24rpx;
  line-height: 40rpx;
  margin: 0 8rpx 16rpx;
}
